@model WeatherAPIMVC.Models.weatherModel

@{
    ViewBag.Title = "Weather API Page";
}

<h2>@ViewBag.Title.</h2>
<h3>@ViewBag.Message</h3>

<html>
<body>
    @using (Html.BeginForm("About", "Home", FormMethod.Post))
    {
        <table cellpadding="0" cellspacing="0">
            <tr>
                <th colspan="2" align="center">Person Details</th>
            </tr>
            <tr>
                <td>City Name: </td>
                <td>
                    @Html.TextBoxFor(m => m.city)
                </td>
            </tr>

            <tr>
                <td></td>
                <td><input type="submit" value="Submit" /></td>
            </tr>
        </table>
    }

    <span>Temperature:</span>
    @Html.DisplayFor(Model => Model.temperature)
    <br />
    <span>Min Temp:</span>
    @Html.DisplayFor(Model => Model.minTemp)
    <br />
    <span>Max Temp:</span>
    @Html.DisplayFor(Model => Model.maxTemp)
    <br />
    <span>Humidity:</span>
    @Html.DisplayFor(Model => Model.humidity)
    <br />


</body>
</html>